@page
@model PoyectoPokedexApi.Pages.Pokemon.RegistroModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro de Usuario</h2>
<div class="row justify-content-center">
    <div class="col-md-7">
        <form method="post">
            <div class="form-group my-2">
                <label asp-for="usuario.Nombre" class="control-label">Nombre</label>
                <input asp-for="usuario.Nombre" class="form-control" />
                <span asp-validation-for="usuario.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="usuario.UserName" class="control-label">Usuario</label>
                <input asp-for="usuario.UserName" class="form-control" />
                <span asp-validation-for="usuario.UserName" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="usuario.Pass" class="control-label">Contraseña</label>
                <input asp-for="usuario.Pass" class="form-control" type="password" />
                <span asp-validation-for="usuario.Pass" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.MensajeRegistro))
{
    <div class="alert alert-info">@Model.MensajeRegistro</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
